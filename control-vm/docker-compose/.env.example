# ----------------------------------------------------------------------------
# AWX Configuration
# ----------------------------------------------------------------------------

# PostgreSQL Database
AWX_POSTGRES_DB=awx
AWX_POSTGRES_USER=awx
AWX_POSTGRES_PASSWORD=CHANGEME_generate_secure_password_here

# AWX Admin Account
AWX_ADMIN_USER=admin
AWX_ADMIN_PASSWORD=CHANGEME_awx_admin_password_here

# AWX Secret Key (used for encrypting credentials)
# Generate with: openssl rand -hex 32
AWX_SECRET_KEY=CHANGEME_generate_with_openssl_rand_hex_32

